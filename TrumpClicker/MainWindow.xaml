<Window x:Class="TrumpClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrumpClicker"
        mc:Ignorable="d"
        Title="Trump Clicker" Height="426" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontFamily="Courier New" FontSize="13.333" MouseLeftButtonDown="Window_MouseLeftButtonDown" Closed="Window_Closed" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Window.Background>
        <ImageBrush ImageSource="Assets/trump.jpg"/>
    </Window.Background>
    <Grid>
        <Rectangle x:Name="AppBar" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="20" Stroke="Black" VerticalAlignment="Top" Width="594" Margin="-10,0,0,0"/>
        <Label x:Name="ClicksLabel" Content="Number Of Clicks:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" FontSize="10.667" FontWeight="Bold" Margin="60,0,0,0"/>
        <Label x:Name="ClicksNumber" Content="" HorizontalAlignment="Left" Margin="175,1,0,0" VerticalAlignment="Top" Height="19" FontSize="10.667" FontWeight="Bold" RenderTransformOrigin="0.375,-0.55"/>
        <Button x:Name="RestartButton" Content="Restart" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="55" FontSize="10.667" Height="19" Background="{x:Null}" ToolTip="Puts your score back to zero and erases your current save file." BorderBrush="{x:Null}" Click="RestartButton_Click"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="20" Margin="55,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="5"/>
        <Image x:Name="UpArrow" HorizontalAlignment="Left" Height="95" Margin="1,302,0,0" VerticalAlignment="Top" Width="59"/>

    </Grid>
</Window>
